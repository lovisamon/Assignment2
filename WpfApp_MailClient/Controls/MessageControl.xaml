<UserControl x:Class="WpfApp_MailClient.Controls.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_MailClient.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">

    <Button x:Name="btnMessage" Click="btnMessage_Click" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
        <Grid>
            <StackPanel>
                <TextBlock x:Name="tbSender" Text ="Firstname Lastname" FontSize="25" FontFamily="Century Gothic" Margin="20,5,5,5"/>
                <TextBlock x:Name="tbTitle" Text = "Title" FontSize="20" FontFamily="Century Gothic" Margin="20,5,5,5"/>
                <TextBlock x:Name="tbMessageContent" Text ="lorum ipsum" FontSize="15" FontFamily="Century Gothic" FontStyle="Italic" Foreground="DimGray" Margin="20,5,5,5"/>
            </StackPanel>
        </Grid>
    </Button>
    
</UserControl>
